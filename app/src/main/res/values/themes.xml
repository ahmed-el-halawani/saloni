<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Saloni" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="android:statusBarColor">@color/splash_color</item>
    </style>

    <style name="Theme.Saloni" parent="Base.Theme.Saloni" />

    <style name="edit_text_style">
        <item name="android:background">@drawable/edit_text_design</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>


    <style name="button_style_orange">
        <item name="android:paddingVertical">16dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@drawable/button_shape_orange</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_style_blue">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@drawable/button_shape_blue</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="button_style_white">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@drawable/button_shape_whe</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textView_16dp">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="icon_tool_bar">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardBackgroundColor">#22FFFFFF</item>
    </style>


</resources>