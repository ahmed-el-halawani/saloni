<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.demo.saloni.ui.auth.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signInFragment2"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_splashFragment_to_fragmentHomeSalon"
            app:destination="@id/fragmentHomeSalon"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_fragmentHomeClient2"
            app:destination="@id/fragmentHomeClient2"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.demo.saloni.ui.auth.signin.SignInFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_in" >
        <argument
            android:name="isSalon"
            app:argType="boolean" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_fragmentHomeClient2"
            app:destination="@id/fragmentHomeClient2"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signInFragment_to_fragmentHomeSalon"
            app:destination="@id/fragmentHomeSalon"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.demo.saloni.ui.auth.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHomeSalon"
        android:name="com.demo.saloni.ui.homeslone.FragmentHomeSalon"
        android:label="FragmentHomeSalon" >
        <action
            android:id="@+id/action_fragmentHomeSalon_to_salonProfile"
            app:destination="@id/salonProfile" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHomeClient2"
        android:name="com.demo.saloni.ui.homeclient.FragmentHomeClient"
        android:label="fragment_home_client"
        tools:layout="@layout/fragment_home_client" />
    <fragment
        android:id="@+id/salonProfile"
        android:name="com.demo.saloni.ui.salon.SalonProfile"
        android:label="fragment_salon_profile"
        tools:layout="@layout/fragment_salon_profile" >
        <action
            android:id="@+id/action_salonProfile_to_splashFragment"
            app:destination="@id/splashFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>